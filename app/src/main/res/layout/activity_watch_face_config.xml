<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:paddingStart="@dimen/activity_config_padding"
    android:paddingTop="@dimen/activity_config_padding"
    android:paddingEnd="@dimen/activity_config_padding"
    android:paddingBottom="@dimen/activity_config_padding"
    tools:context=".editor.WatchFaceConfigActivity"
    tools:deviceIds="wear">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:overScrollMode="ifContentScrolls"
        android:paddingStart="@dimen/activity_config_padding"
        android:paddingTop="@dimen/activity_config_topbottom_padding"
        android:paddingEnd="@dimen/activity_config_padding"
        android:paddingBottom="@dimen/activity_config_topbottom_padding"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/watch_complication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.WatchFace.Button"
            app:icon="@drawable/color_style_icon"
            app:iconPadding="@dimen/activity_config_style_picker_icon_padding"
            android:padding="@dimen/no_padding"
            android:gravity="start|center_vertical"
            android:text="@string/set_complication_label"
            android:textAppearance="?attr/textAppearanceButton"
            android:contentDescription="@string/set_complication_label_content_description"
            android:onClick="onClickComplicationButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/division_ring_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/division_ring"
            android:drawablePadding="2dp"
            android:gravity="start|center_vertical"
            android:onClick="onClickDivisionRingSwitch"
            android:text="@string/activity_config_division_ring_label"
            android:textColor="@color/primary_color"
            android:textAppearance="?attr/textAppearanceButton"
            android:contentDescription="@string/activity_config_division_ring_switch_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/watch_complication" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

